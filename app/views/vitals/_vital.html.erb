
<div class="card">
  <div class="card_vital container">
    <div class="dropdown">
      <%= image_tag "actions.svg",class: 'dropbtn'%>
      <div class="dropdown-content mini">
        <%= link_to '編集する',edit_vital_path(vital) %>
        <%= link_to '削除する',vital_path(vital),data:{method: 'delete',confirm:'本当に削除してもよろしいですか？'}%>
      </div>
    </div>
    <%= link_to vital_path(vital) do %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>体温</th>
            <th>高血圧</th>
            <th>低血圧</th>
            <th>脈拍</th>
            <th>酸素飽和度</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr id="vital_<%= vital.id %>">
            <td>
              <%= vital.temperature %>
            </td>
            <td><%= vital.high_bp %></td>
            <td><%= vital.low_bp %></td>
            <td><%= vital.pulse %></td>
            <td><%= vital.oxygen_saturation %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="card_detail">
    <div class="card_content">
      <div class="card_comment">
      コメント入れる
      </div>
      <div class="card_feces">
        <% if current_user.defecation_by?(vital) %>
          <div class="vital_feces">
            <%= link_to vital_defecations_path(vital), data: { method: 'delete' } do%>
              <%= image_tag 'feces-active.svg' %>
            <% end %>
          </div>
        <% else %>
          <div class="vital_feces">
            <%= link_to vital_defecations_path(vital), data: { method: 'post' } do%>
              <%= image_tag 'feces.svg' %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="card_day">
        <p><%= l(vital.day, format: :short) %></p>
      </div>
    </div>
  </div>
</div>
