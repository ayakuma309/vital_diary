.card.w-75.mx-auto
  .container
    .disease_name.medical_histories_edit
      = medical_history.disease_name
      .dropdown
        = image_tag "actions.svg",class: 'dropbtn',size: '30x30'
        .dropdown-content.mini
          = link_to '編集する',edit_medical_history_path(medical_history)
          = link_to '削除する',medical_history_path(medical_history),data:{method: 'delete',confirm:'本当に削除してもよろしいですか？'}
    %br
    発症時期: #{l(medical_history.when_onset, format: :default)}
    -if current_user.birthday.present?
      (#{medical_history.when_onset.year - current_user.birthday.year}歳)
